$(document).ready(function(){
    
    
    $('.add_fav').click(function(){

        $.get('/products/addtofavorite', { product_id:<%= @product.id %> }, null, "script");
        return false;


     });


      $("#frm_flag_prd").validate({
                    rules: {
                        flag_cont: "required"
                    },
                    messages: {
