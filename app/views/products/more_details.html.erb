        }else{
        
        $(".alert_text").html("Comment should not be empty");
        $(".alert_overlay").fadeIn();
       }
        return false;


     });
    
    $(".close").click(function(){
    $(".alert_overlay").fadeOut();
});

    jQuery("div").webRating({     
        
