 <section>
        <div class="main_container">
            <div class="cms_section">
                <div class="container">
                    <div class="feedback_container">
                        <div class="fdbc_body">
                            <div class="register_popup">
                                <h1 class="login_title"><span>Edit</span> Profile</h1>
                                <br/>
                                <div class="popup_form">
                    <% if flash[:notice] %>  <p class="cmmn_success"><%= flash[:notice] %></p> <% end %>
                    <%= form_for(:user, url: "/users/update", :html =>{:id => "user_edit_form", :autocomplete=>"off", :multipart => true}) do |f| %>
                        <div class="field">
                            <label>First Name:<span class="required">*</span></label>
                            <div class="form_control">
                                <%= f.text_field :fname %>

                            </div>
                        </div>
                        <div class="field">
                            <label>Last Name:<span class="required">*</span></label>
                            <div class="form_control">
                               <%= f.text_field :name %>
                            </div>
                        </div>
                        
                        <div class="field">
                            <label>Bio:<span class="required">*</span></label>
                            <div class="form_control">
                                <%= text_area(:user, :bio, size: "20x6") %>
                            </div>
                        </div>
                      
                         
                        <div class="field">
                            <label>City:</label>
                            <div class="form_control">
                              <%= f.text_field :city %>
                            </div>
                        </div>
                        
                        <div class="field">
                            <label>State:</label>
                            <div class="form_control">
                               <div   class="cus_select_rslt">
                               <span></span>
                                <select class="custom_select" name="user[state]" >
                                    <option value="Select Category" selected>Select State</option>
                                    <% get_state_list.each do |state| %> 
                                    <option value="<%= state.name %>"><%= state.name %></option>
                                    <% end %>
                                </select>
                               </div> 
                            </div>
                        </div>
                        <div class="field">
                            <label>Profile Picture:</label>
                            <div class="form_control">
                                <input type="file" name="user[avatar_data]" class="photo">
                                <ul class="file_dup">
                                    <li class="file_result">No file selected.</li>
                                    <li class="file_btn"><a href="javascript:;">Browse</a></li>
                                </ul>
                                <div class="clear"></div>
                            </div>
                        </div>
                        <div class="field">
                            <label>Cover Photo:</label>
                            <div class="form_control">
                                <input type="file" name="user[cover_photo_data]" class="photo">
                                <ul class="file_dup">
                                    <li class="file_result">No file selected.</li>
                                    <li class="file_btn"><a href="javascript:;">Browse</a></li>
                                </ul>
                                <div class="clear"></div>
                            </div>
                        </div>
                         
                        <div class="field">
                            <label class="empty">&nbsp;</label>
                            <div class="form_control">
                                <input type="submit" value="Update"/>
                            </div>
                        </div>
                    <% end %>
                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>
    <script type="text/javascript">

$(document).ready(function(){
        
 
                
                //Start Register
                $("#user_edit_form").validate({
                  debug: true,
                    rules: {
                        "user[fname]": "required",
                        "user[name]": "required",
                        "user[email]":{
                            required: true,
                            email: true 
                        }
                          
                        
                    },
                    messages: {
                        "user[fname]": "First Name is Required",
                        "user[name]": "Last Name is Required",
                         "user[email]":{
                            required: "Email Address is Required",
                            email: "Invalid Email Address"  
                        }
                    },submitHandler : function(form) {
                     if ($(form).valid()){ form.submit(); return false; // prevent normal form posting
                     }
                  }
                });
 
});
    

</script>