        </div>
    </div>
</div>
<script type="text/javascript">
        $(document).ready(function(){
            
            /*********** Flag Product *************/
        
                $("#frm_flag_prd").validate({
                    rules: {
                        flag_cont: "required"
                    },
                    messages: {
                        flag_cont: "This Field is Required"
                    }
                });
            
            /*********** Flag End **************/
            
            /*********** Add Product *************/
        
                $("#add_product_form").validate({
                    rules: {
                        prd_name: "required",
                        add_categ: "required",
                        add_brand: "required",
                        add_rating: "required"
                        
                    },
                    messages: {
                        prd_name: "This Field is Required",
                        add_categ: "This Field is Required",
                        add_brand: "This Field is Required",
                        add_rating: "This Field is Required"
                    }
                });
            
            /*********** Add Product End **************/
            
            /*********** Add Product *************/
        
                $("#frm_add_lctn").validate({
                    rules: {
                        "location[name]": "required",
                        "location[address]": "required",
                        "location[city]": "required",
                        "location[state]": {
                            required: {
                                depends: function(element){
                                if('' == $('location[state]').val()){
                                return true;
                                }
                                
                            }
                        },
                        "location[zip]": "required"
                    },
                    messages: {
                        "location[name]": "This Field is Required",
                        "location[address]": "This Field is Required",
                        "location[city]": "This Field is Required",
                        "location[state]": "This Field is Required",
                        "location[zip]": "This Field is Required"
                    }
                });
            
            /*********** Add Product End **************/
        });
        
    </script>        