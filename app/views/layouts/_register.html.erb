 
    <div class="light_popup" id="register">
    <div class="light_pop_container">
        <span class="pop_close"></span>
        <div class="light_pop_body">
            <div class="register_popup">
                <h1 class="login_title"><span>Create an Account</span></h1>
                <a href="javascript:;" class="fblogin_link"><span class="login_fb fl"></span><span class="fb_txt fl">Sign In with Facebook</span></a>
                <p class="fr"><span class="required">*</span> Indicates required field</p>
                <div class="clear"></div>
                <p class="center_align or rgt">or</p>
                
                <div class="popup_form">
                   
                    <%= form_for(:user, url: "/users/create", :html =>{:id => "user_signup_form", :autocomplete=>"off"}) do |f| %>
                        <div class="field">
                            <label>First Name:<span class="required">*</span></label>
                            <div class="form_control">
                                <%= f.text_field :fname %>

                            </div>
                        </div>
                        <div class="field">
                            <label>Last Name:<span class="required">*</span></label>
                            <div class="form_control">
                               <%= f.text_field :name %>
                            </div>
                        </div>
                        <div class="field">
                            <label>Email Address:<span class="required">*</span></label>
                            <div class="form_control">
                                <%= f.text_field :email %>
                            </div>
                        </div>
                       
                        <div class="field">
                            <label>Password:<span class="required">*</span></label>
                            <div class="form_control">
                                 <%= f.password_field :password %>
                            </div>
                        </div>
                        <div class="field">
                            <label>Confirm Password:<span class="required">*</span></label>
                            <div class="form_control">
                                <%= f.password_field :password_confirmation %>
                            </div>
                        </div>
                       
                         
                        <div class="field">
                            <label class="empty">&nbsp;</label>
                            <div class="form_control">
                                <input type="submit" value="sign up"/>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
 