<%  unless @products.blank? %>
	$('#products .products').append("<%=escape_javascript(render :partial => 'products/product', :collection => @products, :as => :product)%>");
	$('#brands .products').append("<%=escape_javascript(render :partial => 'products/brand', :collection => @brands, :as => :brand)%>");
	$('.view_all_products').attr('data-page','<%= @products.next_page %>')
<% else %>
	$('.view_all_products').attr('data-page','')
<% end %>

	   