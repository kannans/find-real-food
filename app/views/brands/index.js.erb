<%  unless @productsall.blank? %>
	$('#allbrands .products').append("<%=escape_javascript(render :partial => 'products/product', :collection => @productsall, :as => :product)%>");
	$('#nearby .products').append("<%=escape_javascript(render :partial => 'products/product', :collection => @products, :as => :product)%>");
	$('.view_all_products').attr('data-page','<%= @productsall.next_page %>')
	<% if @productsall.next_page %>
	$('#allbrands .page_results').html('Showing <span><%= @productsall.offset+30 %></span> of <span><%= @productsall.total_entries %></span>')
	$('#nearby .page_results').html('Showing <span><%= @products.offset+30 %></span> of <span><%= @products.total_entries %></span>')
   <% else %>
   $('#allbrands .page_results').html('Showing <span><%= @productsall.total_entries %></span> of <span><%= @productsall.total_entries %></span>')
   $('#nearby .page_results').html('Showing <span><%= @productsall.total_entries %></span> of <span><%= @productsall.total_entries %></span>')
   <% end %>

<% else %>
	$('.view_all_products').attr('data-page','')
<% end %>

	   