<section>
        <div class="main_container">
            <div class="cms_section contact_page">
                <div class="container">
                    <div class="cms_white_bg">
                        <h1>Contact Us</h1>
                        <div class="contact_left fl">
                            <p>To contact us, please select which department you wish to contact: </p><p>

                             SUGGEST A NEW BRAND OR PRODUCT FOR "FIND REAL FOOD"
                            <a href="mailto:ShoppingGuide@WestonAPrice.org"> ShoppingGuide@WestonAPrice.org</a>

                             </p><p> </p><p> </p><p>TECHNICAL ISSUES WITH WEBSITE OR SUBSCRIPTION
                            <a href="mailto:WAPF@RealFoodMobileApp.com">WAPF@RealFoodMobileApp.com</a>

                             </p><p> </p><p>CHAPTER LEADERS SUBMITTING NEW LOCAL FOODS/LOCATIONS
                            <a href="mailto:Local@RealFoodMobileApp.com">Local@RealFoodMobileApp.com</a>

                             </p><p>GENERAL QUESTIONS/SUGGESTIONS
                            Please fill out the form below...
                            </p>
                              <% if flash[:notice] %>  <p class="cmmn_success"><%= flash[:notice] %></p> <% end %>
                            <div class="contact_form">
                                
                                     <%= form_for(:user, url: "/page/contact", :html =>{:id => "frm_con", :autocomplete=>"off", :multipart => true}) do |f| %>

                                    <div class="frm_field">
                                        <label>First Name:<span class="required">*</span></label>
                                        <div class="frm_control">
                                            <input type="text" id="txt_con_fname" name="txt_con_fname" maxlength="30"/>
                                        </div>
                                    </div>
                                    <div class="frm_field">
                                        <label>Last Name:<span class="required">*</span></label>
                                        <div class="frm_control">
                                            <input type="text" id="txt_con_lname" name="txt_con_lname" maxlength="30" />
                                        </div>
                                    </div>
                                    <div class="frm_field">
                                        <label>Email Address:<span class="required">*</span></label>
                                        <div class="frm_control">
                                            <input type="text" id="txt_con_email" name="txt_con_email" maxlength="30" />
                                        </div>
                                    </div>
                                    <div class="frm_field">
                                        <label>Phone:<span class="required">*</span></label>
                                        <div class="frm_control">
                                            <input type="text" id="txt_con_ph" name="txt_con_ph" maxlength="15"/>
                                        </div>
                                    </div>
                                    <div class="frm_field">
                                        <label>Comments:<span class="required">*</span></label>
                                        <div class="frm_control">
                                            <textarea rows="5" id="txtar_con_comments" name="txtar_con_comments" ></textarea>
                                        </div>
                                    </div>
                                    <div class="frm_field">
                                        <label class="empty_label">&nbsp;</label>
                                        <div class="frm_control buttons">
                                            <input type="submit" value="Submit" id="sbmt_con" name="sbmt_con" />
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>
 <script type="text/javascript">
        $(document).ready(function(){
            /*********** Start 06-10-2014 *************/
        
                $("#frm_con").validate({
                    rules: {
                        txt_con_fname: "required",
                        txt_con_lname: "required",
                        txt_con_email:{
                            required: true,
                            email: true 
                        },
                        txt_con_ph: "required",
                        txtar_con_comments: "required"
                    },
                    messages: {
                        txt_con_fname: "First Name is Required",
                        txt_con_lname: "Last Name is Required",
                        txt_con_email:{
                            required: "Email Address is Required",
                            email: "Invalid Email Address"  
                        },
                        txt_con_ph: "Phone is Required",
                        txtar_con_comments: "Comments are Required"
                    }
                });
            
            /*********** End 06-10-2014 **************/
        });
    </script>