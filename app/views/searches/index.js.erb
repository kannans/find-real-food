$('.etabs .tab a').click(function(evt){
          evt.preventDefault();
          $('.etabs .tab a').removeClass('active');
          $(this).addClass('active');
          var divId=$(this).attr('href');
          $('.tab_div').fadeOut().removeClass('active');
          $(divId).fadeIn().addClass('active');
          })


